<hr>
<h1>投稿一覧</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th class= "w-100">タイトル</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <td><%= post.title %></td>
      <td>
        <%= link_to post, class: "btn btn-primary text-nowrap" do %>
          <i class="far fa-edit"></i> 詳細
        <% end %>
      </td>
      <td>
        <%= link_to edit_post_path(post), class: "btn btn-warning text-nowrap" do %>
          <i class="far fa-edit"></i> 編集
        <% end %>
      </td>
      <td>
        <%= link_to post, method: :delete, data: { confirm: "削除しますか?" }, class: "btn btn-danger text-nowrap" do %>
          <i class="far fa-edit"></i> 削除
        <% end %>
      </td>
    </tr>
  <% end %>
</tbody>
</table>
